{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "phpyorkshire",
          "roles": [
            {
              "name": "guest",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "websocket",
          "endpoint": {
            "type": "tcp",
            "port": 9001,
            "interface": "127.0.0.1"
          },
          "auth": {
            "anonymous": {
              "type": "static",
              "role": "guest"
            }
          }
        },
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8001
          },
          "paths": {
            "ws": {
              "type": "websocket",
              "url": "ws://localhost:8001/ws",
              "auth": {
                "anonymous": {
                  "type": "static",
                  "role": "guest"
                }
              }
            }
          }
        }
      ]
    }
  ]
}
