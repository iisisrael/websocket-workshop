{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "ws-workshop",
          "roles": [
            {
              "name": "authenticator",
              "permissions": [
                {
                  "uri": "workshop.",
                  "match": "prefix",
                  "allow": {
                    "register": true
                  },
                  "disclose": {
                    "caller": true
                  },
                  "cache": true
                }
              ]
            },
            {
              "name": "type1",
              "permissions": [
                {
                  "uri": "workshop.",
                  "match": "prefix",
                  "allow": {
                    "call": false,
                    "register": false,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "publisher": true
                  },
                  "cache": true
                }
              ]
            },
            {
              "name": "type2",
              "authorizer": "workshop.permissions",
              "disclose": {
                "caller": true,
                "publisher": true
              }
            },
            {
              "name": "type3",
              "authorizer": "workshop.permissions",
              "disclose": {
                "caller": true,
                "publisher": true
              }
            },
            {
              "name": "blocked",
              "permissions": []
            }
          ]
        },
        {
          "name": "somewhere-else",
          "roles": [
            {
              "name": "seethings",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": true
                  }
                }
              ]
            },
            {
              "name": "dothings",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": false,
                    "register": true,
                    "publish": true,
                    "subscribe": false
                  }
                }
              ]
            },
            {
              "name": "cantcall",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": false,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            },
            {
              "name": "standard",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8000
          },
          "paths": {
            "ws": {
              "type": "websocket",
              "url": "ws://localhost:8005/ws",
              "auth": {
                "wampcra": {
                  "type": "dynamic",
                  "authenticator": "workshop.auth"
                }
              }
            }
          }
        },
        {
          "type": "websocket",
          "endpoint": {
            "type": "tcp",
            "port": 9001,
            "interface": "127.0.0.1"
          },
          "auth": {
            "wampcra": {
              "type": "static",
              "users": {
                "authenticator": {
                  "secret": "authenticator-kZ%3g@JR1oXb",
                  "role": "authenticator"
                }
              }
            }
          }
        }
      ]
    },
    {
      "type": "guest",
      "executable": "/usr/bin/env",
      "arguments": [
        "php",
        "../authenticator.php",
        "ws://127.0.0.1:9001",
        "ws-workshop",
        "authenticator",
        "authenticator-kZ%3g@JR1oXb"
      ]
    }
  ]
}
