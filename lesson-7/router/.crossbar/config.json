{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "yorkshire",
          "roles": [
            {
              "name": "guest",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8000
          },
          "paths": {
            "ws": {
              "type": "websocket",
              "url": "ws://0.0.0.0:8007/ws",
              "auth": {
                "anonymous": {
                  "type": "static",
                  "role": "guest"
                }
              }
            }
          }
        }
      ]
    }
  ]
}
